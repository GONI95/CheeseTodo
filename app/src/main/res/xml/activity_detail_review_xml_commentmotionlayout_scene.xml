<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/mainContainerLayout"
            motion:touchRegionId="@+id/mainContainerLayout" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/mainContainerLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/commentsTextView"
            android:layout_marginTop="5dp" />

        <Constraint
            android:id="@+id/commentRecyclerView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/mainContainerLayout"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/commentValueEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toTopOf="@+id/commentSendButton"
            motion:layout_constraintEnd_toEndOf="@+id/mainContainerLayout"
            motion:layout_constraintStart_toStartOf="@+id/mainContainerLayout"
            motion:layout_constraintTop_toBottomOf="@+id/commentsTextView" />

        <Constraint
            android:id="@+id/commentSendButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="@+id/mainContainerLayout"
            motion:layout_constraintEnd_toEndOf="@+id/mainContainerLayout"
            motion:layout_constraintTop_toBottomOf="@+id/commentValueEditText" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            motion:layout_constraintBottom_toTopOf="@+id/commentValueEditText"
            android:layout_marginStart="10dp"
            motion:layout_constraintTop_toTopOf="@+id/mainContainerLayout"
            motion:layout_constraintStart_toStartOf="@+id/mainContainerLayout"
            android:layout_marginTop="10dp"
            android:id="@+id/commentsTextView" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/mainContainerLayout"
            motion:layout_constraintHorizontal_bias="0.49"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/nestedScrollView"
            android:layout_marginBottom="8dp" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/mainContainerLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />
        <Constraint
            android:id="@+id/commentRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/mainContainerLayout"
            android:layout_marginTop="5dp" />


    </ConstraintSet>
</MotionScene>