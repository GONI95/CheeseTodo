<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar 설정 -->
    <style name="Widget.CheeseTodo.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:title">@null</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <!-- Chip 스타일 설정 -->
    <style name="Widget.CheeseTodo.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list</item>
        <item name="android:textColor">@color/tv_filter_chip_state_list</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list_reset</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="iconEndPadding">2dp</item>
    </style>


    <!-- Chip Font 스타일 -->
    <style name="Widget.CheeseTodo.ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/nanum_gothic</item>
        <item name="android:textStyle">italic</item>
    </style>


    <!-- 카드뷰 -->
    <style name="Widget.CheeseTodo.CardView" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <!-- 투명 버튼 -->
    <style name="Widget.CheeseTodo.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/cheese</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>