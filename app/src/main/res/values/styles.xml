<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar 설정 -->
    <style name="ThemeOverlay.CheeseTodo.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- Toolbar 내에서 사용될 TextView -->
    <style name="ThemeOverlay.CheeseTodo.Toobar.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/cute_light</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.CheeseTodo.SearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/gray_thick</item>
        <item name="android:fontFamily">@font/cute_light</item>
        <!-- Drawable Color -->
        <item name="android:drawableTint">@color/gray_thick</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/gray_thick</item>
    </style>

    <!-- Chip 스타일 설정 -->
    <style name="Widget.CheeseTodo.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/storke_filter_chip_state_list</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textColor">@color/tv_filter_chip_state_list</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list_reset</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIcon">@drawable/ic_check</item>

        <!--
            chipBackgroundColor : Chip 배경 색상
            chipStrokeColor : Chip 테두리 색상
            chipStrokeWidth : Chip 테두리 굵기
            chipIconTint : Chip 아이콘 색상
            chipIconSize : Chip 아이콘 크기
            icon***Padding : Chip 아이콘 패딩값
            chip***Padding : Chip 패딩값
            chipIconVisible : Chip의 아이콘 표시 여부
            chipIconTint : Chip 아이콘의 색상 설정
          -->
    </style>

    <!-- Chip Font 스타일 -->
    <style name="Widget.CheeseTodo.ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/cute_light</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- 카드뷰 -->
    <style name="Widget.CheeseTodo.CardView" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <!-- 투명 버튼 -->
    <style name="Widget.CheeseTodo.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/cheese</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Widget.CheeseTodo.SwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>