<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 전체 틀에 대한 패딩값 -->
    <item
        android:left="12dp"
        android:right="12dp"
        android:top="6dp"
        android:bottom="6dp">

        <shape>
            <!-- layout 내부에 대한 패딩값 -->
            <padding
                android:left="16dp"
                android:right="16dp" />

            <corners android:radius="20dp"/>
            <solid android:color="@android:color/white" />

            <stroke
                android:width="0.5dp"
                android:color="@color/light_gray" />
        </shape>
    </item>

</layer-list>