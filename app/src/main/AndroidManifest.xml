<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sang.gondroid.cheesetodo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="sang.gondroid.cheesetodo.CheeseTodoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cheese_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name="sang.gondroid.cheesetodo.presentation.review.DetailReviewActivity"
            android:theme="@style/Theme.CheeseTodo"/>
        <activity android:name="sang.gondroid.cheesetodo.presentation.todocategory.DetailTodoActivity"
            android:theme="@style/Theme.CheeseTodo"/>
        <activity android:name="sang.gondroid.cheesetodo.presentation.todocategory.InsertTodoActivity"
            android:theme="@style/Theme.CheeseTodo"/>
        <activity android:name="sang.gondroid.cheesetodo.presentation.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>